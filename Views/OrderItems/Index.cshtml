@model IEnumerable<SolforbTest.Models.OrderItem>

@{
    ViewData["Title"] = "Index";
}

<h4> Items in Order Number (@ViewBag.orderNumber),Provider (@ViewBag.ProviderName), On : (@ViewBag.orderDate) </h4>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>         
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td contenteditable='true'>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            
                <td contenteditable='true'>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
                <td contenteditable='true'>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
           
        </tr>
}
    </tbody>
</table>
<div class="row">
    
    <div class="col-md-5">
        <a asp-controller="Orders" asp-action="Index" class="btn btn-danger">Back to List</a>
    </div>
</div>